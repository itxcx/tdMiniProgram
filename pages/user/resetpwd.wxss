.page {
	background-color: #f2f2f2;
	width: 100%;
	height: 100%;
}
.resetpwd-form {
	position: relative;
	margin-bottom: 60rpx;
	padding-top: 30rpx;
}
.resetpwd-form > view {
	position: relative;
	width: 100%;
	height: 90rpx;
	background-color: #fff;
	font-size: 30rpx;
	margin-top: 30rpx;
}
.resetpwd-form > view:first-child {
	margin-top: 0;
}
.resetpwd-form > view .label {
	position: absolute;
	left: 30px;
	top: 50%;
	margin-top: -15rpx;
	color: #333;
	z-index: 99;
}
.resetpwd-form > view input {
	position: relative;
	padding-left: 220rpx;
	top: 50%;
-webkit-transform: translateY(-50%); 
	transform: translateY(-50%);
	z-index: 9;
}
.resetpwd-form > view .right {
	position: absolute;
	top: 50%;
	margin-top: -15rpx;
	right: 30rpx;
	font-size: 30rpx;
	color: #fab600;
	z-index: 99;
}

.verification-wrapper .right text {
	color: #fab600;
}

.submit-btn {
	width: 690rpx;
	height: 84rpx;
	line-height: 84rpx;
	border: none;
	text-align: center;
	background-color: #fc0;
	color: #fff;
	font-size: 34rpx;
	border-radius: 8rpx;
	margin: auto;
}
.submit-btn:after {
	border: none !important;
}