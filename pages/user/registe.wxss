.page {
	width: 570rpx;
	margin: auto;
}
.registe-form {
	position: relative;
	margin:auto;
	margin-top: 50rpx;
}
.registe-form > view {
	border-bottom: 1rpx solid #e6e6e6;
	position: relative;
	width: 100%;
	height: 80rpx;
	padding-left: 96rpx;
	box-sizing:border-box;
	-webkit-box-sizing:border-box;
	margin-top: 36rpx;
}
.registe-form .phone-wrapper {
	margin-top: 0;
}
.registe-form .phone-icon {
	width: 24rpx;
	height: 34rpx;
	position: absolute;
	left: 35rpx;
	top: 50%;
	margin-top: -17rpx;	
}
.registe-form .pwd-icon {
	width: 34rpx;
	height: 34rpx;
	position: absolute;
	left: 30rpx;
	top: 50%;
	margin-top: -17rpx;	
}
.registe-form .verification-icon {
	width: 34rpx;
	height: 34rpx;
	position: absolute;
	left: 30rpx;
	top: 50%;
	margin-top: -17rpx;	
}
.registe-form input {
	font-size: 30rpx;
	color: #333;
	position: relative;
	top: 50%;
	-webkit-transform: translateY(-50%); 
	transform: translateY(-50%);
}
.registe-form .eye-icon {
	width: 30rpx;
	height: 30rpx;
	position: absolute;
	right: 30rpx;
	top: 50%;
	margin-top: -15rpx;	
	z-index: 99;
}
.registe-form > view .right {
	position: absolute;
	top: 50%;
	margin-top: -15rpx;
	right: 30rpx;
	font-size: 30rpx;
	color: #fab600;
	z-index: 99;

}
.verification-wrapper .right text {
	color: #fab600;
}
.inviter-wrapper {
	margin-top: 30rpx;
	position: relative;
}
.inviter-wrapper > view {
	padding-left: 30rpx;
	font-size: 0;
}
.inviter-wrapper .invite-wrapper {
	border-bottom: 1rpx solid #e6e6e6;
	position: relative;
	width: 100%;
	height: 80rpx;
	padding-left: 96rpx;
	box-sizing:border-box;
	-webkit-box-sizing:border-box;
	margin-top: 36rpx;
}
.inviter-wrapper .invite-wrapper input {
	font-size: 30rpx;
	color: #333;
	position: relative;
	top: 50%;
	-webkit-transform: translateY(-50%); 
	transform: translateY(-50%);
}
.invite-wrapper .invite-icon {
	width: 34rpx;
	height: 34rpx;
	position: absolute;
	left: 30rpx;
	top: 50%;
	margin-top: -17rpx;	
}
.inviter-wrapper .arrow-icon {
	width: 34rpx;
	height: 18rpx;
	display: inline-block;
	vertical-align: middle;
	margin-right: 10rpx;
}
.inviter-wrapper .arrow-icon.down {
	-webkit-transform: rotate(90deg); 
	transform: rotate(90deg);
}
.inviter-wrapper text {
	font-size: 24rpx;
	color: #fab600;
	display: inline-block;
	vertical-align: middle;
}

.registe-btn {
	width: 100%;
	height: 84rpx;
	line-height: 84rpx;
	font-size: 34rpx;
	color: #fff;
	background-color: #fc0;
	border-radius: 8rpx;
	text-align: center;
	margin: auto;
	margin-top: 60rpx;
	margin-bottom: 32rpx;
	display:block;
	border: none !important;
}
.registe-btn::after {
	border: none !important;
}

.agreement-wrapper {
	color: #ccc;
	font-size: 24rpx;
	text-align: center;
	margin-bottom: 80rpx;
}
.agreement-wrapper text {
	color: #fab600;
}

.footer-wrapper {
	color: #ccc;
	font-size: 24rpx;
	text-align: center;	
}
.footer-wrapper text {
	color: #fab600;
}


